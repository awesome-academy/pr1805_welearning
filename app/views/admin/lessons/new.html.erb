<% provide :title, "Thiết kế bài giảng" %>
<% provide :button, "Tạo bài giảng" %>

<h1 align="center">Thiết kế bài giảng</h1>
<div class="row d-flex justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, :course, @lesson] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :lesson_title, "Tên bài giảng" %>
      <%= f.text_field :lesson_title, class: "form-control mb-2" %>
      <%= f.label :lesson_content, "Nội dung" %>
      <%= f.text_area :lesson_content, class: "form-control mb-2" %>      
      <%= f.submit "Tạo mới bài giảng",
        class: "mt-3 btn btn-success btn-sm btn-block" %>
    <% end %>
  </div>
</div>
